{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/webdav-sync.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/webdav-sync", "dest": "api/webdav-sync.ts" },

    { "handle": "filesystem" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}